#!/bin/bash
#  echo 60 dashes, or other character, or other number
function usage-exit ()
{
    printf "usage: %s [-c X] [#]\n" $(basename $0)
    printf "makes 60 dashes (or Xs) or # instead of 60\n"
    exit 2
} >&2
LEN=60
CHAR='-'
while getopts 'c:' OPTION
do
    case $OPTION in
        c) CHAR=$OPTARG;;
        ?) usage-exit;;
    esac
done
shift $(($OPTIND - 1))
if test $# -gt 0; then
    if [[ $1 =~ [0-9]+ ]] ; then
        LEN=$1
    else
        printf "$1 is not numeric\n"
        usage-exit
    fi
fi
DASHES=""
for ((i=0; i<LEN; i++))
do
    DASHES="${DASHES}${CHAR}"
done
printf "%s\n" "$DASHES"
