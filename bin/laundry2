#!/usr/bin/python3
#  laundry2 prints only if days since last whatever > 6
#  written for ~/bin/ccct (which is now ~/bin/3)
from datetime import date
from os import environ
from re import compile
from sys import exit
from time import strftime, strptime
Y = strftime("%Y")
fn = environ['HOME'] + '/txt/laundry.log'
try:
    F = open(fn, 'r')
except IOError:
    print("cannot open %s" % fn)
    exit(1)
L = F.read()
F.close()
LL = L.splitlines()
lL = len(LL)
gw = gc = gs = gt = False    #  got white?  etc.
white = compile('white')
colored = compile('colored')
sheets = compile('sheets')
towels = compile('towels')
today = date.today()
didanything = 0

#  calculate date difference
def cdd (inst, what):
    global didanything
    bd = inst[4:11] + Y
    wd = strptime(bd, "%b %d %Y")
    sd = date(wd.tm_year, wd.tm_mon, wd.tm_mday)
    diff = today - sd

    if diff.days < 0:
        bd = inst[4:11] + str(int(Y) - 1)
        wd = strptime(bd, "%b %d %Y")
        sd = date(wd.tm_year, wd.tm_mon, wd.tm_mday)
        diff = today - sd

    dys = diff.days
    if dys > 6:
        print("%2d days since the last %s laundry" % (dys, what))
        didanything += 1

lp = lL - 1
while(lp > -1):
    tl = LL[lp]
    if not gc and colored.search(tl):
        cdd(tl, "colored")
        gc = True
    if not gw and white.search(tl):
        cdd(tl, "white")
        gw = True
    if not gs and sheets.search(tl):
        cdd(tl, "sheets")
        gs = True
    if not gt and towels.search(tl):
        cdd(tl, "towels")
        gt = True
    if gw and gc and gs and gt:
        break
    lp = lp - 1

if didanything > 0:
    print("")
