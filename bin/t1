#!/bin/bash
#  extract of tocal for the command line
tsl=`tput lines`
if test $tsl -gt 37; then
    b
    if test $# -gt 0; then
        export lc=$(($1 + 1))
    else
        export lc=$(($tsl - `cm1p1 | wc -l` - 4))
    fi
    pfc=$(( ( (`tput cols` - 75) / 2) - 2 ))
    cm1p1 | mio $pfc
    dsh 74 | mio $((pfc + 1))
else
    if test $# -gt 0; then
        export lc=$(($1 + 1))
    else
        export lc=$(($tsl - 2))
    fi
fi
tcnlc3 | mio 7
