#!/bin/bash
#  tocal, no linecount
if [ x$lc == x ]; then
    echo 'tcnlc cannot function without environment variable "lc"'
    echo 'defined as a valid/desired line count'
    echo 'examples include the scripts tc and tc2'
    exit 1
fi
cb=$(( $lc / 3 ))
ca=$(( $lc - $cb ))
cat ~/txt/tocal | ~/py/bcdit | grep -v '^ -----' | grep -B$cb -A$ca '  <----<<$' | trimc
