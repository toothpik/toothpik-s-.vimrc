#!/bin/bash
#  list executables to stdout, vhs, or ghs
function lexe() {
    for f in "$2"*
    do
        if [ -h "$f" ]; then
            wl=$(file "$f")
            echo "$wl"
        else
            if [ -f "$f" -a -x "$f" ]; then
                if [[ "${f}" == *.pyc ]]; then
                    printf "%-11s  is a pyc\n" "$f"
                else
                    lang=$(head -1 "$f" | awk 'BEGIN {FS = "/"} { print $NF }' | awk '{print $1}')
                    sl=$(2ndline "$f")
                    printf "%-14s [%-7s] %s\n" "$f" "$lang" "${sl#\#  }"
                fi
            fi
        fi
    done
}
if test $# -lt 1
then
    lexe "$@"
elif test "$1" == 'v'
then
    lexe "$@" | vhs -S ~/.vim/readme.vim
else
    lexe "$@" | ghs -S ~/.vim/readme.vim
fi
