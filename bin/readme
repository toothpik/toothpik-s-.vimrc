#!/bin/bash
#  list executables through ghs, vhs, or pt (pass-through)
pt='pt'
if test $# -gt 0
then
    case $1 in
        g) pt='ghs -S ~/.vim/readme.vim'
            ;;
        v) pt='vhs -S ~/.vim/readme.vim'
            ;;
        *) pt=pt
            ;;
    esac
fi
for f in "$2"*
do
    if [ -h "$f" ]; then
        wl=`file $f`
        echo "$wl"
    else
        if [ -f "$f" -a -x "$f" ]; then
            sl=`2ndline $f`
            printf "%-11s %s\n" "$f" "$sl"
        fi
    fi
done | $pt
