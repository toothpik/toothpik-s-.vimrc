#!/usr/bin/perl
#  last fiscal year
#  or, more accurately, most recent year's worth 
#  of fiscally completed months
use DateTime;
$ty = DateTime->now(time_zone => 'America/Chicago')->strftime("%y");
$mmdd = DateTime->now(time_zone => 'America/Chicago')->strftime("%m%d");
$py = $ty - 1;
$tm = `~/bin/cfm`;
chop($tm);
int($tm);

#  for the sake of the last week of the year:
if ($tm == 12 && $mmdd > 1222) {
    $typ = "m" . $ty;
    $cypher = `$typ`;
    print $cypher;
    exit 0;
}

$pyp = "m" . $py;

foreach $m ($tm .. 12) {
    $cypher = `$pyp $m`;
    print $cypher;
}

if ($tm > 1) {
    $typ = "m" . $ty;
    foreach $m (1 .. $tm - 1) {
        $cypher = `$typ $m`;
        print $cypher;
    }
}
