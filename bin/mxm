#!/bin/bash
#  make "x" more, start naming at $2
case $# in
    0)  hm=19           #  how many
        sn=2            #  starting number
        ;;
    1)  hm=$1
        sn=2
        ;;
    *)  hm=$1
        sn=$2
        ;;
esac
x=0
while test $x -lt $hm ; do
    kn=$(( x + sn ))
    konsole --new-tab -p tabtitle="$kn) %D" 
    x=$(( x + 1 ))
done
