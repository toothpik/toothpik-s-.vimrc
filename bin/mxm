#!/bin/bash
#  mxm
#  make $1 more, start naming at $2
if test $# -eq 0 ; then
    hm=19           #  how many
    sn=2            #  starting number
else
    if test $# -eq 1 ; then
        hm=$1
        sn=2
    else
        hm=$1
        sn=$2
    fi
fi
function numword ()
{
    case $1 in
        1) echo 'One'
            ;;
        2) echo 'Two'
            ;;
        3) echo 'Three'
            ;;
        4) echo 'Four'
            ;;
        5) echo 'Five'
            ;;
        6) echo 'Six'
            ;;
        7) echo 'Seven'
            ;;
        8) echo 'Eight'
            ;;
        9) echo 'Nine'
            ;;
        10) echo 'Ten'
            ;;
        11) echo 'Eleven'
            ;;
        12) echo 'Twelve'
            ;;
        13) echo 'Thirteen'
            ;;
        14) echo 'Fourteen'
            ;;
        15) echo 'Fifteen'
            ;;
        16) echo 'Sixteen'
            ;;
        17) echo 'Seventeen'
            ;;
        18) echo 'Eighteen'
            ;;
        19) echo 'Nineteen'
            ;;
        20) echo 'Twenty'
            ;;
        *) echo $1
            ;;
    esac
}
x=0
while test $x -lt $hm ; do
    kn=$(($x + $sn))
    konsole --new-tab -p tabtitle="$(numword $kn)"
#    konsole --new-tab -p tabtitle="%d [$(numword $kn)]"
#    konsole --new-tab -p tabtitle="%d [$kn]"
    x=$(( x + 1 ))
done
