#!/bin/bash
#  make "x" more, start naming at $2
case $# in
    0)  hm=9            #  how many
        sn=2            #  starting number
        ;;
    1)  hm=$1
        sn=2
        ;;
    *)  hm=$1
        sn=$2
        ;;
esac
x=0
while test $x -lt $hm ; do
    kn=$(( x + sn ))
    konsole --profile toothpik --new-tab -p tabtitle="($kn)" 
    x=$(( x + 1 ))
done
