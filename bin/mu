#!/bin/bash
#  print unclear plan transactions
dt=`date '+%m/%d'`
pfc=$(( ( ( `tput cols` - 75) / 2) - 2 ))
{
    if test $# -lt 1; then
        echo "$dt     Today's Unclear"
    fi
    uclro $1 
} | mio $(( $pfc - 5 ))
