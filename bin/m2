#!/bin/bash
#  print next fiscal month of plan data
clear
b
tsl=`tput lines`
if test $tsl -gt 40; then
    pfc=$(( ( (`tput cols` - 75) / 2) - 2 ))
    cm1p1 | mio $pfc
    b
else
    pfc=11
fi
cy=`date '+%y'`
wm=`curpmo`
nm=$((wm + 1))
if test $nm -gt 12; then
    y=$((cy + 1))
    m=1
else
    y=$cy
    m=$nm
fi
m$y $m | grep -v '^-----' | mio $(($pfc - 5))
