#!/bin/bash
#  tocal, no linecount, temp stuff added, used by tcc2, tc4
if [ x$lc == x ]; then
    echo 'tcnlc3 cannot function without environment variable "lc"'
    echo 'defined as a valid/desired line count'
    echo 'examples include the scripts tcc3'
    exit 1
fi
if test $# -gt 0; then
    cb=$1
else
    cb=$(( lc / 3 ))
fi
ca=$(( lc - cb ))
cat ~/txt/tocal | bcdit3 | jtr | grep -B $cb -A $ca '──────┐$' | trimc
