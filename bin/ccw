#!/bin/bash
#  clear & cat weather
#  if adding filters (fixtoday, fvd, etc) add them to sw also
if test $# -eq 0; then
    php ~/php/cw.php > ~/.rawweather
fi
c
ta=$(( `tput lines` - 7 ))
python ~/py/parseweather.py | head -5 | mio
printf "\n"
python ~/py/parseweather.py | tail -n +6 | fixtoday | fvd | fmt | mio | head -$ta
