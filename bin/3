#!/bin/bash
#  new and improved cct
clear
b
tc=`tput cols`
pfc=$(( ( ( tc - 75) / 2)  ))
date '+%A' | mio $(( pfc + 25 ))
b
cct | mio $pfc
b
testtodo=`todoo|wc -l`
if test $testtodo -gt 0; then
    todoo | mio
    b
fi
#  bonus stuff:
dsh $tc
#b
#uofb | mio $(( pfc - 2 ))
#b
#dsh $tc
b
mpp | mio $(( pfc + 9 ))
b
