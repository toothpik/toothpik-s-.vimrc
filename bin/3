#!/bin/bash
#  new and improved cct (clear and countdowns)
c
b

#if [ $# -eq 0 ]
#then 
#    cm1p2
#    b 2
#fi
tc=`tput cols`
pfc=$(( ( ( tc - 75) / 2)  ))
cct | mio $pfc

b 2
#  weeklies
cat ~/txt/weekly | awk -f ~/fcday.awk | mio $pfc

b 2
#  show laundry list
sll | mio $pfc

b 2
#  next fiscal start
nfs | mio $pfc

b 2
dslh | mio $pfc

b 2
tv2 | mio $(( pfc - 10 ))
