#!/bin/bash
#  new and improved cct
clear
b 5
tc=`tput cols`
pfc=$(( ( ( tc - 75) / 2)  ))
cct | mio $pfc
b
testtodo=`todoo|wc -l`
if test $testtodo -gt 0; then
    todoo | mio
    b
fi
