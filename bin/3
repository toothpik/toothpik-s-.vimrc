#!/bin/bash
#  new and improved cct (clear and countdowns)
#  #########################################################
#  #########################################################
#  ####                                                 ####
#  ####  when making changes here make them to 3nc too  ####
#  ####                                                 ####
#  ####  last update  2015-Feb-26                       ####
#  ####                                                 ####
#  #########################################################
#  #########################################################

tc=`tput cols`
pfc=$(( ( ( tc - 75) / 2)  ))

c
b
#  countdown list
cct | mio $pfc

b
#  weeklies
cat ~/txt/weekly | wkly2 | sed 's/---/───/' | mio $pfc

b
#  show laundry list
sll | mio $pfc

b
#  schedule
sched | mio $pfc

b
#  next fiscal start
nfs | mio $pfc

b
#  days since last haircut
dslh | mio $pfc

b
#  next moon phase
nmp | mio $pfc
