#!/bin/bash
#  new and improved cct (clear and countdowns)
#  #########################################################
#  #########################################################
#  ####                                                 ####
#  ####  when making changes here make them to 3nc too  ####
#  ####                                                 ####
#  ####  last update  2015-Feb-26                       ####
#  ####                                                 ####
#  #########################################################
#  #########################################################

tc=`tput cols`
pfc=$(( ( ( tc - 75) / 2)  ))

c
b
#  countdown list
cct | mio $pfc

b 2
#  upcomings
tv2 | mio $pfc

b 2
#  weeklies
#cat ~/txt/weekly | wkly2 | sed 's/---/───/' | mio $pfc
cat ~/txt/weekly | awk -f ~/fcday.awk  | fgrep '<' | mio $pfc

#  voting month?
checkvote | mio $pfc

#b
##  show laundry list
#sll | mio $pfc

b 2
#  schedule
sched | mio $pfc

b 2
#  next fiscal start
nfs | mio $pfc

b 2
#  days since last haircut
dslh | mio $pfc

da=$(date '+%d')
if [ $da -gt 5 ]
then
    b 2
    #  next moon phase
    nmp | mio $pfc
fi
