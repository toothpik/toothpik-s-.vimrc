#!/bin/bash
#  update (or start) "ws" (workspace) windows
gw=0
gc=0
gl=0
#  if they exist, make them refresh
for s in `vim --serverlist`; do
    case $s in
        WKLY) vim --servername WKLY --remote-send ':source ~/.vim/weekly.vim<CR><CR>'
              gw=1
              ;;
        TCAL) vim --servername TCAL --remote-send ':source ~/.vim/mmatc.vim<CR>'
              gc=1
              ;;
        LAUN) vim --servername LAUN --remote-send ':call NewDay()<CR><CR>'
              gl=1
              ;;
        ?) ;;
    esac
done
#  values:  1 = weekly       gw
#           2 = sacalh       gc
#           3 = snls         gl
#  $1 = 1  create weekly
#  $1 = 2  create sacalh
#  $1 = 3  create snls
#  $1 = 4  create weekly and sacalh
#  $1 = 5  create sacalh and snls
#  $1 = 6  create weekly and snls
#  $1 = 7  create all three
if test $# -lt 1;  then
    fm=7
else
    case $1 in
        1) gc=1
           gl=1
           ;;
        2) gw=1
           gl=1
           ;;
        3) gw=1
           gc=1
           ;;
        4) gl=1
           ;;
        5) gw=1
           ;;
        6) gc=1
           ;;
        ?) echo 'cannot understand $1: ' $1
           echo 'it is optional'
           echo 'it can be 1 - 7 if it exists'
           echo '(1) creates weekly'
           echo '(2) creates sacalh'
           echo '(3) creates snls (laundry)'
           echo '(4) creates weekly and sacalh'
           echo '(5) creates sacalh and snls'
           echo '(6) creates weekly and snls'
           echo '(7 or no arg) creates weekly, sacalh, and snls'
           exit 1
    esac
fi
if test $gw -eq 0; then
    weekly
fi

if test $gc -eq 0; then
    sacalh
fi

if test $gl -eq 0; then
    snls
fi
